<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="棒読みちゃんのPCを指定">

    </PreferenceCategory>
    <EditTextPreference
        android:defaultValue="127.0.0.1"
        android:digits="0123456789."
        android:inputType="number"
        android:key="edit_text_preference_ip"
        android:summary="PCのIPアドレス"
        android:title="IP address" />
    <EditTextPreference
        android:defaultValue="50001"
        android:inputType="number"
        android:key="edit_text_preference_port"
        android:selectAllOnFocus="true"
        android:summary="PCのポート番号"
        android:title="port" />
    <PreferenceCategory android:title="棒読みちゃんの読み上げ設定">

    </PreferenceCategory>
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/list_preference_voice_type"
        android:entryValues="@array/list_preference_voice_type_value"
        android:key="list_preference_type"
        android:summary="%s"
        android:title="voice type" />
    <ListPreference
        android:defaultValue="100"
        android:entries="@array/list_preference_voice_speed"
        android:entryValues="@array/list_preference_voice_speed_value"
        android:key="list_preference_speed"
        android:summary="%s"
        android:title="speed" />
    <ListPreference
        android:defaultValue="100"
        android:entries="@array/list_preference_voice_interval"
        android:entryValues="@array/list_preference_voice_interval_value"
        android:key="list_preference_interval"
        android:summary="%s"
        android:title="interval" />
    <ListPreference
        android:defaultValue="50"
        android:entries="@array/list_preference_voice_volume"
        android:entryValues="@array/list_preference_voice_volume_value"
        android:key="list_preference_volume"
        android:summary="%s"
        android:title="volume" />
    <EditTextPreference
        android:defaultValue=" "
        android:key="edit_text_preference_command"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="voiceroid talk plus のコマンド"
        android:title="command" />
    <PreferenceCategory android:title="タイマー通知の設定">

    </PreferenceCategory>
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/list_preference_voice_type"
        android:entryValues="@array/list_preference_voice_type_value"
        android:key="list_preference_type_auto"
        android:summary="%s"
        android:title="voice type timer" />
    <EditTextPreference
        android:defaultValue=" "
        android:key="edit_text_preference_command_auto"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="タイマーのvoiceroid talk plus のコマンド"
        android:title="command for timer" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_auto_circle_update"
        android:title="円更新通知" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_auto_start"
        android:title="縮小開始通知" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_auto_5sec"
        android:title="縮小5秒前通知" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_auto_30sec"
        android:title="縮小30秒前通知" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_auto_60sec"
        android:title="縮小1分前通知" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_auto_120sec"
        android:title="縮小2分前通知" />
</PreferenceScreen>